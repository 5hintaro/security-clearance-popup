{
  "manifest_version": 3,
  "name": "SC Clearance Popup for Indeed and LinkedIn",
  "version": "1.2",
  "description": "Displays an alert when a job listing on Indeed or LinkedIn includes 'SC Clearance'.",
  "icons": {
    "128": "icons/icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.indeed.com/*",
        "*://www.linkedin.com/jobs/*",
        "*://www.linkedin.com/jobs/search/*",
        "*://www.linkedin.com/jobs/view/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon.png"
    }
  }
}
