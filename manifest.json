{
  "manifest_version": 3,
  "name": "Security Clearance Popup for Indeed and LinkedIn",
  "version": "1.0",
  "description": "Displays an alert when a job listing on Indeed or LinkedIn includes 'Security Clearance'.",
  "icons": {
    "128": "icons/icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.indeed.com/*",
        "*://*.linkedin.com/jobs/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon.png"
    }
  }
}
